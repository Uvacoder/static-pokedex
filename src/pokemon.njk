---
tags: pokemon
layout: layouts/base.njk
pagination:
  data: pokemonData
  size: 1
  alias: pokemon
  addAllPagesToCollections: true
renderData:
  title: "{{ pokemon.name }}"
permalink: pokemon/{{ pokemon.name }}/index.html
---

<main class='flex-1'> 
  <section class='pt-4 pb-20 text-white' style='{{ pokemon.types | typeGradient }}'>
    <div class='container mx-auto px-4 pb-8'>
      <a class='text-2xl opacity-75 hover:opacity-100 transition' href='/'>‚Üê</a>
    </div>
    <div class='container mx-auto px-4'>
      <div class='flex justify-between items-center'>
        <h1 class='text-4xl'>{{ pokemon.name | title }}</h1>
        <span class='text-2xl font-bold'>#{{ pokemon.id | padNumber }}</span>
      </div>
      <ul class='text-xs font-bold uppercase tracking-wide'>
        {%- for type in pokemon.types -%}
          <li class='p-2 mr-2 rounded text-white relative overflow-hidden inline-block w-32 text-center shadow-md'>
            <div class='bg-white opacity-25 absolute left-0 top-0 h-full w-full'></div>
            {{ type }}
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </section>
  <section class='container mx-auto px-4'>
    <div class='py-12 -mt-12 bg-white rounded-lg shadow-md px-12'>
      <img class='mx-auto' src="/assets/images/pokemon-gifs/{{ pokemon.name }}.gif" alt="Animated gif of {{ pokemon.name | title }}">
      <p class='text-2xl font-bold'>Stats:</p>
      <hr class='mt-2 mb-4' />
      <div class='w-full'>
        {%- for stat in pokemon.stats -%}
          <div class='flex mb-1 items-center'>
            <span class='w-1/3 text-sm font-black'>{{ stat.name }}</span>
            <div class='h-8 flex-1 rounded text-white relative overflow-hidden bg-gray-200'>
              <div class='absolute left-0 bottom-0 h-full' style='width: {{ stat.percent }}%; background-color: {{ pokemon.types[0] | typeColor }};'></div>
              <span class='ml-2 text-white z-10 absolute left-0 bottom-0 h-full flex items-center'>{{ stat.base_stat }}</span>
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </section>
</main>




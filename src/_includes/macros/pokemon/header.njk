{% macro header(pokemon, href='/') %}
  <section class='pt-4 pb-20 text-white' style='{{ pokemon.types | typeGradient }}'>
    <div class='container mx-auto px-4 pb-8'>
      <a class='text-2xl opacity-75 hover:opacity-100 transition' href='{{ href }}'>‚Üê</a>
    </div>
    <div class='container mx-auto px-4'>
      <div class='flex justify-between items-center'>
        <h1 class='text-4xl'>{{ pokemon.name | title }}</h1>
        <span class='text-2xl font-bold'>#{{ pokemon.id | padNumber }}</span>
      </div>
      <ul class='text-xs font-bold uppercase tracking-wide'>
        {% for type in pokemon.types %}
          <li class='p-2 mr-2 rounded text-white relative overflow-hidden inline-block w-32 text-center shadow-md inline-flex justify-center align-bottom last:mr-0'>
            <div class='bg-white opacity-25 absolute left-0 top-0 h-full w-full'></div>
            {% typeIcon type | safe, 'mr-2' %}
            {{ type }}
          </li>
        {% endfor %}
      </ul>
    </div>
  </section>
{% endmacro %}
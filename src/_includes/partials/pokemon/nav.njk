{% set sharedClasses = 'pokemon-nav-item block py-2 px-6 text-sm tracking-wider uppercase rounded-full transition-fast  hover:bg-gray-500 hover:text-white' %}

<ul class='md:flex mb-4'>
  {% for navItem in pokemonNav %}
    {% set href = "/pokemon/" + pokemon.identifier + "/" + navItem.href %}
    <li class='mr-2 mb-2 font-black md:mb-0 last:mr-0'>
      <a class='{% if page.url == href %} pokemon-nav-item--active {% endif %} {{ sharedClasses }}' href="{{ href }}" style="--color: {{ pokemon.types[0] | typeColor }}">{{ navItem.text }}</a>
    </li>
  {% endfor %}
</ul>